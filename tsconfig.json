{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@types/node"
    ],
    "include": [
      "./nuxt.d.ts",
      "**/*",
      "**/*.ts",
      "**/*.tsx",
      "**/*.vue"
    ],
    "exclude": [
      "../dist"
    ]
  }
}
